@model IEnumerable<FirstMvcApp.Models.Author>

@{
    ViewData["Title"] = "AuthorList";
}

<h1>AuthorList</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuthorID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoOfBookPublished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Royalty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfBookPublished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Royalty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
               @Html.ActionLink("Edit", "Edit", new { ID=item.AuthorID}) |
                    @Html.ActionLink("Details", "Details", new { ID=item.AuthorID }) |
                    @Html.ActionLink("Delete", "Delete", new { ID=item.AuthorID})
            </td>
        </tr>
}
    </tbody>
</table>
